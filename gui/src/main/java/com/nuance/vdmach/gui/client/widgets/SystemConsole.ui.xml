<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'
             xmlns:w='urn:import:com.nuance.vdmach.gui.client.widgets'
        >

    <ui:style type="com.nuance.vdmach.gui.client.widgets.SystemConsole.SystemConsoleStyle">
        .controlLabel {
            font-size: 15px;
            font-weight: bold;
            color: #777777;
        }
        .msg {
            margin-top: 8px;
            margin-left: 10px;
            font-size: 16px;
            font-weight: bold;
        }
        .error {
            color: red;
        }
        .info {
            color: darkgreen;
        }
    </ui:style>


    <g:VerticalPanel>
        <g:Label addStyleNames="{style.controlLabel}">Get Your Product Here</g:Label>

        <g:HTML ui:field="systemMsg" addStyleNames="{style.msg}"/>
    </g:VerticalPanel>

</ui:UiBinder>